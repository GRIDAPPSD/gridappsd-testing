                #alarms = gapps.subscribe("{}{}".format(alarms_topic, (simulation_id)),1)
                #alarms = gapps.subscribe(alarms_topic, 1)
                #sim = gapps.run_simulation(run_config)

                # tm: typo in add_onmesurement
